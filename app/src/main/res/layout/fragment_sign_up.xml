<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.LoginFragment" android:id="@+id/loginFrag">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.100000024"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:background="@drawable/et_rounded"
            app:layout_constraintHorizontal_bias="0.0"
    >
        <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView
                    android:textSize="14dp"
                    android:id="@+id/tvSignUpEmpId"
                    android:text="Employee ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:paddingLeft="-1dp"
                    android:background="@drawable/et_bg_selector"
                    android:textCursorDrawable="@null"
                    android:maxLength="5"
                    android:id="@+id/et_signup_employee_id"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textColor="@color/dimBlack"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tvSignUpEmail"
                    android:textSize="14dp"
                    android:text="Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            <EditText
                    android:paddingLeft="-1dp"
                    android:background="@drawable/et_bg_selector"
                    android:textCursorDrawable="@null"
                    android:id="@+id/et_sign_up_email"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textColor="@color/dimBlack"
                    android:inputType="textEmailAddress"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView
                    android:textSize="14dp"
                    android:id="@+id/tvSign_up_Mobile"
                    android:text="Mobile No"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:paddingLeft="-1dp"
                    android:background="@drawable/et_bg_selector"
                    android:textCursorDrawable="@null"
                    android:maxLength="10"
                    android:id="@+id/et_sign_up_mobile"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textColor="@color/dimBlack"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tvSignPass"
                    android:textSize="14dp"
                    android:text="Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <com.mindorks.editdrawabletext.EditDrawableText
                    android:paddingLeft="-1dp"
                    android:background="@drawable/et_bg_selector"
                    android:textCursorDrawable="@null"
                    android:maxLength="12"
                    android:id="@+id/et_sign_up_password"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textColor="@color/dimBlack"
                    android:inputType="textPassword"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tvSignRePass"
                    android:textSize="14dp"
                    android:text="Re-Enter Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <com.mindorks.editdrawabletext.EditDrawableText
                    android:paddingLeft="-1dp"
                    android:background="@drawable/et_bg_selector"
                    android:textCursorDrawable="@null"
                    android:maxLength="12"
                    android:id="@+id/et_sign_up_re_password"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textColor="@color/dimBlack"
                    android:inputType="textPassword"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="23dp"
                    android:layout_marginLeft="23dp"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:id="@+id/bt_sign_up_submit"
                    android:background="@drawable/login_bt_gradient"
                    android:layout_width="match_parent" android:layout_height="43dp" android:text="SIGN UP"/>

        </LinearLayout>


    </LinearLayout>





</android.support.constraint.ConstraintLayout>