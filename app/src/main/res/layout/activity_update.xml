<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                            android:layout_width="match_parent"
                                             android:background="@drawable/bg"
                                             android:layout_height="match_parent">



    <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <include
            android:id="@+id/toolbar_update"
            layout="@layout/toolbar" />

    </LinearLayout>

    <android.support.constraint.Guideline
            android:background="@color/white"
            android:id="@+id/guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />


    <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline"
            app:layout_constraintBottom_toBottomOf="@id/guideline"
            android:padding="10dp"
            android:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HU"
            android:background="@drawable/name_circle_victor"
            android:textSize="38sp"
            android:textColor="@android:color/holo_orange_dark"
            android:id="@+id/tcv_name"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintVertical_bias="0.100000024"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_update" tools:ignore="NotSibling"/>
    <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.219"
            android:background="@drawable/et_rounded"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/tcv_name"
            android:layout_marginBottom="8dp" android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            android:id="@+id/linearLayout2">


        <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView
                    android:textSize="14dp"
                    android:id="@+id/tvUpdateEmail"
                    android:text="Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:paddingLeft="-1dp"
                    android:background="@drawable/et_bg_selector"
                    android:textCursorDrawable="@null"
                    android:id="@+id/et_update_email"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textColor="@color/dimBlack"
                    android:inputType="textEmailAddress"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tvUpdateMobile"
                    android:textSize="14dp"
                    android:text="Mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            <EditText
                    android:paddingLeft="-1dp"
                    android:background="@drawable/et_bg_selector"
                    android:textCursorDrawable="@null"
                    android:maxLength="10"
                    android:id="@+id/et_update_mobile"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textColor="@color/dimBlack"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tvUpdatePass"
                    android:textSize="14dp"
                    android:text="Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <com.mindorks.editdrawabletext.EditDrawableText
                    android:paddingLeft="-1.5dp"
                    android:background="@drawable/et_bg_selector"
                    android:textCursorDrawable="@null"
                    android:maxLength="12"
                    android:id="@+id/et_update_password"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textColor="@color/dimBlack"
                    android:inputType="textPassword"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:layout_marginBottom="25dp"
                    android:id="@+id/bt_update"
                    android:background="@drawable/login_bt_gradient"
                    android:layout_width="match_parent" android:layout_height="43dp" android:text="UPDATE"/>


        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>

