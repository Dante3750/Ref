<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.LoginFragment" android:id="@+id/loginFrag">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.100000024"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:background="@drawable/et_rounded"
    >


        <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView
                    android:textSize="14dp"
                    android:id="@+id/tvEmpId"
                    android:text="Employee ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:paddingLeft="-1dp"
                    android:background="@drawable/et_bg_selector"
                    android:textCursorDrawable="@null"
                    android:maxLength="5"
                    android:layout_marginLeft="2dp"
                    android:id="@+id/et_employee_id"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textColor="@color/dimBlack"
                    android:inputType="number"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tvEmpPass"
                    android:textSize="14dp"
                    android:text="Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <com.mindorks.editdrawabletext.EditDrawableText
                    android:paddingLeft="-1dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/et_bg_selector"
                    android:textCursorDrawable="@null"
                    android:maxLength="12"
                    android:id="@+id/et_password"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textColor="@color/dimBlack"
                    android:inputType="textPassword"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent" android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:id="@+id/bt_login"
                    android:background="@drawable/login_bt_gradient"
                    android:layout_width="match_parent" android:layout_height="43dp" android:text="LOGIN"/>

            <TextView
                    android:textSize="14dp"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="35dp"
                    android:gravity="center"
                    android:text="@string/forgot_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/tv_forgot_pass"/>


        </LinearLayout>


    </LinearLayout>





</android.support.constraint.ConstraintLayout>