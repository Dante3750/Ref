<?xml version="1.0" encoding="utf-8"?>



<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/bg"
        tools:context=".activity.JobDescriptionActivity">

    <include

            android:id="@+id/toolbar_update"
            layout="@layout/toolbar" />


    <LinearLayout
            android:background="@drawable/bg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_update"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintVertical_bias="0.0" android:id="@+id/linearLayout3">
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_height"
            android:background="@color/recyclerColor"
            android:layout_width="match_parent"
            android:layout_height="1500dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0">




    </LinearLayout>




    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content" tools:ignore="MissingConstraints">




        <LinearLayout

                android:background="@drawable/white_rounded"
                android:padding="20dp"
                android:orientation="vertical"
                android:id="@+id/ll_rewards"
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="@+id/toolbar_update"
                android:layout_marginTop="54dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.466" app:layout_constraintVertical_bias="0.0">

            <LinearLayout android:layout_weight="1" android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal">


                <TextView
                        android:textColor="@color/jobdimcolor"
                        android:text="Designation"
                        android:layout_weight="0.5"
                        android:textSize="14dp"
                        android:layout_width="match_parent" android:layout_height="wrap_content"/>


                <TextView

                        android:textColor="@color/jobdimcolor"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:text="JobId"
                        android:textSize="14dp"
                        android:layout_width="match_parent" android:layout_height="wrap_content"/>





            </LinearLayout>

            <LinearLayout android:layout_weight="1" android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView
                        android:id="@+id/tv_designation"
                        android:textColor="@color/jobTextColor"
                        android:layout_weight="0.5"
                        android:textSize="14dp"
                        android:layout_width="match_parent" android:layout_height="wrap_content"/>


                <TextView
                        android:id="@+id/tv_jobId"
                        android:textColor="@color/jobTextColor"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:textSize="14dp"
                        android:layout_width="match_parent" android:layout_height="wrap_content"/>




            </LinearLayout>



            <LinearLayout  android:layout_marginTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView
                        android:textColor="@color/jobdimcolor"
                        android:text="Summary"
                        android:layout_weight="0.5"
                        android:textSize="14dp"
                        android:layout_width="match_parent" android:layout_height="wrap_content"/>



                <TextView android:textSize="10dp" android:id="@+id/tv_job_desc"  android:textColor="@android:color/black" android:layout_width="match_parent" android:layout_height="wrap_content"/>


                <TextView  android:id="@+id/tv_readmore" android:drawablePadding="10dp" android:layout_marginTop="10dp"
                          android:drawableRight="@drawable/dropdown_icon" android:textAllCaps="true"
                          android:text="Read More" android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_close" android:drawablePadding="10dp" android:layout_marginTop="10dp"
                          android:drawableRight="@drawable/rotate" android:textAllCaps="true"
                          android:text="Less" android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>


                <TextView
                        android:textColor="@color/jobdimcolor"
                        android:layout_marginTop="10dp"
                        android:text="Skills"
                        android:layout_weight="0.5"
                        android:textSize="14dp"
                        android:layout_width="match_parent" android:layout_height="wrap_content"/>


                <ScrollView
                        android:id="@+id/tags_laoyut"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                >

                    <com.cunoraz.tagview.TagView
                            android:layout_marginTop="10dp"
                            android:id="@+id/tag_group"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                          />

                </ScrollView>

                <TextView
                        android:textColor="@color/jobdimcolor"
                        android:layout_marginTop="10dp"
                        android:text="Matrix"
                        android:textSize="14dp"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_matrixCode"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="10dp"
                        android:textSize="14dp"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>


                <TextView
                        android:textColor="@color/jobdimcolor"
                        android:layout_marginTop="10dp"
                        android:text="Job Location"
                        android:textSize="14dp"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_location"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="10dp"

                        android:textSize="14dp"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"/>


                <Button
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:id="@+id/bt_refer"
                        android:background="@drawable/login_bt_gradient"
                        android:layout_width="match_parent" android:layout_height="43dp" android:text="REFER FRIEND"/>


            </LinearLayout>




        </LinearLayout>


    </LinearLayout>




</android.support.constraint.ConstraintLayout>


