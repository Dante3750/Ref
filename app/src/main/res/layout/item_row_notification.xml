<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    card_view:cardCornerRadius="5dp"
                                    card_view:cardBackgroundColor="@color/white"
                                    card_view:cardUseCompatPadding="true"
                                    card_view:cardElevation="0dp"
                                    android:backgroundTint="@color/white"
                                    android:scrollbars="none"
                                    card_view:cardPreventCornerOverlap="true"
                                    android:layout_height="wrap_content">


    <LinearLayout android:padding="10dp" android:layout_width="match_parent"
                  android:layout_height="wrap_content">


        <LinearLayout  android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">

            <TextView android:textSize="20dp" android:textColor="@color/black" android:id="@+id/tv_title" android:text="Hey I m Title" android:layout_width="match_parent" android:layout_height="wrap_content"/>

                <TextView android:layout_marginTop="5dp" android:layout_weight="0.5" android:textSize="20dp" android:textColor="@color/black"
                          android:id="@+id/tv_body" android:text="Hey I m Body" android:layout_width="match_parent"
                          android:layout_height="wrap_content"/>

            <TextView android:layout_marginTop="5dp" android:gravity="end"  android:layout_weight="0.5"  android:textSize="10dp" android:textColor="@color/red" android:id="@+id/tv_timeStamp" android:text="Hey I m Timestamp" android:layout_width="match_parent" android:layout_height="wrap_content"/>






        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>